<Window x:Class="TCC_MVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TCC_MVVM"
        mc:Ignorable="d"
        Title="MainWindow" Height="150" Width="250">
    <Grid>

        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Teste Monitoramento" Width="165" Height="40" Margin="5" FontWeight="Bold" FontSize="16"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Command="{Binding StopCommand}" Width="40" Height="30" Content="STOP" Margin="5"/>
                <Button Command="{Binding StartCommand}" Width="80" Height="30" Content="Start" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
