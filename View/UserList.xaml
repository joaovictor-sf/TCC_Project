<Window x:Class="TCC_MVVM.View.UserList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TCC_MVVM.View"
        xmlns:viewmodel="clr-namespace:TCC_MVVM.ViewModel"
        mc:Ignorable="d"
        Title="UserList" Height="450" Width="500"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown">

    <Window.DataContext>
        <viewmodel:UserListViewModel/>
    </Window.DataContext>

    <Border CornerRadius="12">
        <Border CornerRadius="10" 
                BorderThickness="2">
            
            <!-- Background Gradient -->
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#303860" Offset="0.5"/>
                    <GradientStop Color="#b69a50" Offset="0.75"/>
                    <GradientStop Color="#736958" Offset="1.0"/>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="#060531" Offset="0.0"/>
                    <GradientStop Color="#1b1448" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header with Title and Buttons -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="U S E R   L I S T" 
                               Foreground="DarkGray" 
                               FontSize="10" 
                               FontFamily="Montserrat" 
                               Grid.Column="0"
                               VerticalAlignment="Center" 
                               Margin="10,0,0,0"/>

                    <Button x:Name="btnMinimize" 
                            BorderThickness="0" 
                            Content="-" 
                            Foreground="White" 
                            FontSize="16" 
                            FontFamily="Montserrat" 
                            Cursor="Hand" 
                            Grid.Column="1"
                            Command="{Binding MinimizeCommand}">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#28AEED"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#278BEF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18"
                                        CornerRadius="9"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="btnClose" 
                            BorderThickness="0" 
                            Content="X" 
                            Foreground="White" 
                            FontSize="12" 
                            FontFamily="Montserrat" 
                            Cursor="Hand" 
                            Grid.Column="2" 
                            Command="{Binding CloseCommand}">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#DA34AE"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#C62DAE"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18"
                                        CornerRadius="9"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="Cadastrar" Width="75" Height="30" Margin="0, 0, 5, 0" Command="{Binding AddCommand}"/>
                        <Button Content="Demitir" Width="75" Height="30" Margin="0, 0, 5, 0" Command="{Binding DeleteCommand}"/>
                        <Button Content="Editar" Width="75" Height="30" Command="{Binding SaveCommand}"/>
                    </StackPanel>

                    <DataGrid ItemsSource="{Binding Users}" 
                              AutoGenerateColumns="False" 
                              SelectionMode="Single" 
                              SelectionUnit="FullRow" 
                              Margin="10, 10, 10, 0"
                              Grid.Row="1"
                              IsReadOnly="True"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              CanUserResizeRows="False"
                              Height="350">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Nome" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Sobrenome" Binding="{Binding LastName}" Width="*"/>
                            <DataGridTextColumn Header="Cargo" Binding="{Binding Role}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                </Grid>
            </Grid>
        </Border>
    </Border>
</Window>
