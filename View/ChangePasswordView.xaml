<Window x:Class="TCC_MVVM.View.ChangePasswordView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TCC_MVVM.View"
        xmlns:viewmodel="clr-namespace:TCC_MVVM.MVVM.ViewModel"
        xmlns:controls="clr-namespace:TCC_MVVM.UserControls"
        mc:Ignorable="d"
        Title="ChangePasswordView" Height="350" Width="500"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown">

    <Window.InputBindings>
        <KeyBinding Key="Enter"
            Command="{Binding ChangePasswordCommand}" />
    </Window.InputBindings>

    <Border CornerRadius="12">
        <Border CornerRadius="10"
                BorderThickness="2">

            <!-- Background Gradient -->
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#303860" Offset="0.0"/>
                    <GradientStop Color="#b69a50" Offset="0.75"/>
                    <GradientStop Color="#736958" Offset="1.0"/>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <!-- Border Background -->
            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="#060531" Offset="0.0"/>
                    <GradientStop Color="#1b1448" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header with Title and Buttons -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="C H A N G E   Y O U R   P A S S W O R D" 
                               Foreground="DarkGray" 
                               FontSize="10" 
                               FontFamily="Montserrat" 
                               Grid.Column="0"
                               VerticalAlignment="Center" 
                               Margin="10,0,0,0"/>

                    <Button x:Name="btnMinimize" 
                            BorderThickness="0" 
                            Content="-" 
                            Foreground="White" 
                            FontSize="16" 
                            FontFamily="Montserrat" 
                            Cursor="Hand" 
                            Grid.Column="1"
                            Command="{Binding MinimizeCommand}">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#28AEED"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#278BEF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18"
                                        CornerRadius="9"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="btnClose" 
                            BorderThickness="0" 
                            Content="X" 
                            Foreground="White" 
                            FontSize="12" 
                            FontFamily="Montserrat" 
                            Cursor="Hand" 
                            Grid.Column="2" 
                            Command="{Binding CloseCommand}">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#DA34AE"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#C62DAE"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18"
                            CornerRadius="9"
                            Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>

                <!-- Main Content -->
                <StackPanel Grid.Row="1"
                            Width="400"
                            Orientation="Vertical"
                            Margin="0,35,0,0">
                    <StackPanel.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="DarkGray"/>
                            <Setter Property="FontFamily" Value="Montserrat"/>
                            <Setter Property="FontSize" Value="12"/>
                            <Setter Property="FontWeight" Value="Medium"/>
                            <Setter Property="Margin" Value="0,15,0,0"/>
                        </Style>

                    </StackPanel.Resources>

                    <TextBlock Text="Current Password:"/>
                    <controls:BindablePasswordBox Password="{Binding CurrentPassword, Mode=TwoWay}" />

                    <TextBlock Text="New password:"/>
                    <controls:BindablePasswordBox Password="{Binding NewPassword, Mode=TwoWay}" />

                    <TextBlock Text="Confirm The New Password:"/>
                    <controls:BindablePasswordBox Password="{Binding ConfirmPassword, Mode=TwoWay}" />

                    <Button Content="CHANGE" 
                            BorderThickness="0"
                            Foreground="White"
                            FontSize="12"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Padding="10"
                            Margin="0,30,0,0"
                            Command="{Binding ChangePasswordCommand}">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#462AD8"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#28AEED"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="150" Height="40"
                                        CornerRadius="20"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                      HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>

            </Grid>
        </Border>
    </Border>
</Window>
